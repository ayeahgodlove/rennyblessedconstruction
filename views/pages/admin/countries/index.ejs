<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-between align-items-center">
    <h2>Countries</h2>
    <a href="/dashboard/countries/create" class="btn btn-primary btn-sm">Add</a>
  </div>
  <div class="card">
    <div class="card-body">
      <!-- Table with stripped rows -->
      <table class="table datatable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Image</th>
            <th>Flag</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% countries.forEach(country => { %>
          <tr>
            <td><%= country.id %></td>
            <td><%= country.countryName %></td>
            <td><img height="50" width="50" src="http://localhost:8088/uploads/countries/<%= country.imageUrl %>"  /></td>
            <td><img height="50" width="50" src="http://localhost:8088/uploads/countries/<%= country.flagUrl %>"  /></td>
            <td>
              <a href="/dashboard/countries/edit/<%= country.id %>"
                ><i class="bi bi-pencil-square text-success"></i
              ></a>
              <form
                action="/dashboard/countries/delete/<%= country.id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this country?');"
                  class="btn"
                >
                  <i class="bi bi-trash3-fill text-danger"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- End Table with stripped rows -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
