<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-start align-items-center">
    <a href="/dashboard/features" class="text-primary"
      ><i class="bi bi-arrow-left"></i> Back</a
    >
  </div>
  <div class="card py-5">
    <div class="card-body">
      <!-- Vertical Form -->
      <form
        class="row g-3"
        action="/dashboard/features/create"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="col-12">
          <label for="featureName" class="form-label">Feature Name</label>
          <input
            type="text"
            class="form-control"
            name="featureName"
            id="featureName"
            placeholder="country name"
          />
        </div>

        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea
            cols="3"
            name="description"
            class="form-control"
            id="description"
          ></textarea>
        </div>

        <div class="col-12">
          <label for="icon" class="form-label">Icon</label>
          <input type="text" name="icon" class="form-control" id="icon" />
        </div>

        <div class="text-left">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <button type="reset" class="btn btn-warning">Reset</button>
        </div>
      </form>
      <!-- Vertical Form -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
