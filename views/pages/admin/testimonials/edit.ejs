<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-start align-items-center">
    <a href="/dashboard/testimonials" class="text-primary"
      ><i class="bi bi-arrow-left"></i> Back</a
    >
  </div>
  <div class="card py-5">
    <div class="card-body">
      <!-- Vertical Form -->
      <form
        class="row g-3"
        action="/dashboard/testimonials/edit/<%= testimonial.id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="col-12">
          <label for="personName" class="form-label">Feature Name</label>
          <input
            type="text"
            class="form-control"
            name="personName"
            id="personName"
            placeholder="person's name"
            value="<%= testimonial.personName %>"
          />
        </div>

        <div class="col-12">
          <label for="profession" class="form-label">Feature Name</label>
          <input
            type="text"
            class="form-control"
            name="profession"
            id="profession"
            placeholder="profession"
            value="<%= testimonial.profession %>"
          />
        </div>

        <div class="col-12">
          <label for="imageUrl" class="form-label">Image</label>
          <input
            type="file"
            name="imageUrl"
            class="form-control"
            id="imageUrl"
            value="<%= testimonial.imageUrl %>"
          />
        </div>

        <div class="col-12">
          <label for="testimony" class="form-label">Testimony</label>
          <textarea
            cols="3"
            name="testimony"
            class="form-control"
            id="testimony"
          ><%= testimonial.testimony %></textarea>
        </div>

        <div class="col-12">
          <label for="rating" class="form-label">Rating</label>

          <input
            type="text"
            name="rating"
            class="form-control"
            id="rating"
            value="<%= testimonial.rating %>"
          />
        </div>
        <div class="text-left">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <button type="reset" class="btn btn-warning">Reset</button>
        </div>
      </form>
      <!-- Vertical Form -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
