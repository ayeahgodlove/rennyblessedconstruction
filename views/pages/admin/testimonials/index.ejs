<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-between align-items-center">
    <h2>Testimonials</h2>
    <a href="/dashboard/testimonials/create" class="btn btn-primary btn-sm"
      >Add</a
    >
  </div>
  <div class="card">
    <div class="card-body">
      <!-- Table with stripped rows -->
      <table class="table datatable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Profession</th>
            <!-- <th>testimony</th> -->
            <th>Rating</th>
            <th>Image</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% testimonials.forEach(testimonial => { %>
          <tr>
            <td><%= testimonial.id %></td>
            <td><%= testimonial.personName %></td>
            <td><%= testimonial.profession %></td>
            <!-- <td><%= testimonial.testimony %></td> -->
            <td><%= testimonial.rating %></td>
            <td>
              <img
                height="50"
                width="50"
                src="http://localhost:8088/uploads/testimonials/<%= testimonial.imageUrl %>"
              />
            </td>
            <td>
              <a href="/dashboard/testimonials/edit/<%= testimonial.id %>"
                ><i class="bi bi-pencil-square text-success"></i
              ></a>
              <form
                action="/dashboard/testimonials/delete/<%= testimonial.id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this testimonial?');"
                  class="btn"
                >
                  <i class="bi bi-trash3-fill text-danger"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- End Table with stripped rows -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
