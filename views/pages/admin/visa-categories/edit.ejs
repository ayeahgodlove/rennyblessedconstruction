<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-start align-items-center">
    <a href="/dashboard/visa-categories" class="text-primary"
      ><i class="bi bi-arrow-left"></i> Back</a
    >
  </div>
  <div class="card py-5">
    <div class="card-body">
      <!-- Vertical Form -->
      <form
        class="row g-3"
        action="/dashboard/visa-categories/create"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="col-12">
          <label for="visaCategoryName" class="form-label"
            >Visa Category Name</label
          >
          <input
            type="text"
            class="form-control"
            name="visaCategoryName"
            id="visaCategoryName"
            placeholder="visa category name"
            value="<%= visaCategory.visaCategoryName %>"
          />
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            class="form-control"
            id="description"
            value="<%= visaCategory.description %>"
          ></textarea>
        </div>
        <div class="col-12">
          <label for="imageUrl" class="form-label">Image</label>
          <input
            type="file"
            name="imageUrl"
            class="form-control"
            id="imageUrl"
          />
        </div>
        <div class="text-left">
          <button type="submit" class="btn btn-primary">Edit</button>
          <button type="reset" class="btn btn-warning">Reset</button>
        </div>
      </form>
      <!-- Vertical Form -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
