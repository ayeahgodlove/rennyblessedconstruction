<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-between align-items-center">
    <h2>Trainings</h2>
    <a href="/dashboard/trainings/create" class="btn btn-primary btn-sm">Add</a>
  </div>
  <div class="card">
    <div class="card-body">
      <!-- Table with stripped rows -->
      <table class="table datatable">
        <thead> 
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% trainings.forEach(training => { %>
          <tr>
            <td><%= training.id %></td>
            <td><%= training.trainingName %></td>
            <td><%= training.description %></td>
            <td>
              <img
                height="50"
                width="50"
                src="http://localhost:8088/uploads/trainings/<%= training.imageUrl %>"
              />
            </td>
            <td>
              <a href="/dashboard/trainings/edit/<%= training.id %>"
                ><i class="bi bi-pencil-square text-success"></i
              ></a>
              <form
                action="/dashboard/trainings/delete/<%= training.id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this training?');"
                  class="btn"
                >
                  <i class="bi bi-trash3-fill text-danger"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- End Table with stripped rows -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
