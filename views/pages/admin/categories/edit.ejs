<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-start align-items-center">
    <a href="/dashboard/categories" class="text-primary"
      ><i class="bi bi-arrow-left"></i> Back</a
    >
  </div>
  <div class="card py-5">
    <div class="card-body">
      <!-- Vertical Form -->
      <form
        class="row g-3"
        action="/dashboard/categories/edit/<%= visaCategory.id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="col-12">
          <label for="name" class="form-label"
            >Visa Category Name</label
          >
          <input
            type="text"
            class="form-control"
            name="name"
            id="name"
            placeholder="name"
            value="<%= visaCategory.name %>"
          />
        </div>
        <div class="text-left">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <button type="reset" class="btn btn-warning">Reset</button>
        </div>
      </form>
      <!-- Vertical Form -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
