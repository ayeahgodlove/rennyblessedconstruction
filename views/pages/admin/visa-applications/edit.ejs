<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-start align-items-center">
    <a href="/dashboard/visa-applications" class="text-primary"
      ><i class="bi bi-arrow-left"></i> Back</a
    >
  </div>
  <div class="card py-5">
    <div class="card-body">
      <!-- Vertical Form -->
      <form
        class="row g-3"
        action="/dashboard/visa-applications/edit/<%= visaApplication.id %>"
        method="post"
      >
        <div class="col-12">
          <label for="status" class="form-label">Status:</label>
          <select id="status" name="status" class="form-control">
            <option value="submitted" <%= visaApplication.status === 'submitted' ? 'selected' : '' %>>Submitted</option>
            <option value="under review" <%= visaApplication.status === 'under review' ? 'selected' : '' %>>Under review</option>
            <option value="approved" <%= visaApplication.status === 'approved' ? 'selected' : '' %>>Approved</option>
            <option value="rejected" <%= visaApplication.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
          </select>
        </div>
     
        <div class="text-left">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <button type="reset" class="btn btn-warning">Reset</button>
        </div>
      </form>
      <!-- Vertical Form -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
