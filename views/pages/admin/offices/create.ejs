<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-start align-items-center">
    <a href="/dashboard/offices" class="text-primary"
      ><i class="bi bi-arrow-left"></i> Back</a
    >
  </div>
  <div class="card py-5">
    <div class="card-body">
      <!-- Vertical Form -->
      <form class="row g-3" action="/dashboard/offices/create" method="post" enctype="multipart/form-data">
        <div class="col-12">
          <label for="officeName" class="form-label">Office Name</label>
          <input type="text" class="form-control" name="officeName" id="officeName" placeholder="office name" />
        </div>
        <div class="col-12">
          <label for="email" class="form-label">Office Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="office email" />
        </div>

        <div class="col-12">
          <label for="telephone class="form-label">Office Phone</label>
          <input type="text" class="form-control" name="telephone" id="telephone" placeholder="office telephone" />
        </div>

        <div class="col-12">
          <label for="imageUrl" class="form-label">Image</label>
          <input type="file" name="imageUrl" class="form-control" id="imageUrl" />
        </div>

        <div class="col-12">
          <label for="address1" class="form-label">Address Line One</label>
          <input
            type="text"
            class="form-control"
            id="address1"
            placeholder="1234 Main St"
            name="address1"
          />
        </div>

        <div class="col-12">
          <label for="address2" class="form-label">Address Line Two</label>
          <input
            type="text"
            class="form-control"
            id="address2"
            placeholder="1234 Main St"
            name="address2"
          />
        </div>

        <div class="text-left">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <button type="reset" class="btn btn-warning">Reset</button>
        </div>
      </form>
      <!-- Vertical Form -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
