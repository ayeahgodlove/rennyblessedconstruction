<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-between align-items-center">
    <h2>Offices</h2>
    <a href="/dashboard/offices/create" class="btn btn-primary btn-sm">Add</a>
  </div>
  <div class="card">
    <div class="card-body">
      <!-- Table with stripped rows -->
      <table class="table datatable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Office</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>Address One</th>
            <th>Address Two</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% offices.forEach(office => { %>
          <tr>
            <td><%= office.id %></td>
            <td><%= office.officeName %></td>
            <td><%= office.email %></td>
            <td><%= office.telephone %></td>
            <td><%= office.address1 %></td>
            <td><%= office.address2 %></td>
            <td>
              <a href="/dashboard/offices/edit/<%= office.id %>"
                ><i class="bi bi-pencil-square text-success"></i
              ></a>
              <form
                action="/dashboard/offices/delete/<%= office.id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this office?');"
                  class="btn"
                >
                  <i class="bi bi-trash3-fill text-danger"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- End Table with stripped rows -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
