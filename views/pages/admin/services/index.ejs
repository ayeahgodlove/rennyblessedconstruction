<%- include("../../../layout/admin-header") %>

<main id="main" class="main">
  <%- include("../../../partials/admin/breadcrumb") %>
  <div class="mb-3 pt-2 pb-0 d-flex justify-content-between align-items-center">
    <h2>Services</h2>
    <a href="/dashboard/services/create" class="btn btn-primary btn-sm">Add</a>
  </div>
  <div class="card">
    <div class="card-body">
      <!-- Table with stripped rows -->
      <table class="table datatable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Image</th>
            <!-- <th>Icon</th> -->
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% services.forEach(service => { %>
          <tr>
            <td><%= service.id %></td>
            <td><%= service.title %></td>
            <td>
              <img
                height="50"
                width="50"
                src="http://localhost:8088/uploads/services/<%= service.imageUrl %>"
              />
            </td>
            <!-- <td><%= service.description %></td> -->
            <!-- <td><i class="<%= service.icon %> fa-2x"></i></td> -->
            <td>
              <a href="/dashboard/services/edit/<%= service.id %>"
                ><i class="bi bi-pencil-square text-success"></i
              ></a>
              <form
                action="/dashboard/services/delete/<%= service.id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this service?');"
                  class="btn"
                >
                  <i class="bi bi-trash3-fill text-danger"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- End Table with stripped rows -->
    </div>
  </div>
</main>

<%- include("../../../layout/admin-footer") %>
