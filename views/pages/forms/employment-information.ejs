<%- include("../../layout/header") %>
<main>
  <div class="container py-5">
    <div class="col-12 col-md-10 mx-md-auto card border-0 shadow p-5">
      <h1 class="mb-3">Employment and Education</h1>
      <form action="/apply-employment-information" method="post" class="row">
        <div class="form-group mb-3">
          <label for="occupation">Current Occupation:</label>
          <input
            type="text"
            class="form-control"
            id="occupation"
            name="occupation"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="employerName">Employer Name:</label>
          <input
            type="text"
            class="form-control"
            id="employerName"
            name="employerName"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="employerAddress">Employer Address:</label>
          <input
            type="text"
            class="form-control"
            id="employerAddress"
            name="employerAddress"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="employerPhone">Employer Phone Number:</label>
          <input
            type="text"
            class="form-control"
            id="employerPhone"
            name="employerPhone"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="educationBackground">Educational Background:</label>
          <textarea
            class="form-control"
            id="educationBackground"
            name="educationBackground"
            rows="3"
            required
          ></textarea>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <button type="submit" class="btn btn-primary d-block">Next</button>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include("../../layout/footer") %>
